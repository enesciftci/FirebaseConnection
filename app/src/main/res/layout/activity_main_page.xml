<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ibrahimenescifti.firebaseconnection.MainPage">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="159dp"
        android:layout_margin="60dp"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="En Son Giriş Yapılan Sınıf" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="201dp"
        android:layout_margin="60dp"
        android:orientation="vertical"
        android:paddingTop="60dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="302dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:text="Giriş Yapmak İstediğiniz Aynı Sınıf İse Direk Giriş Tuşuna Basabilirsiniz..."
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonSinifaGirisYap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giriş" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
